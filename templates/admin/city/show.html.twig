{% extends 'admin/base.html.twig' %}

{% block title %}City{% endblock %}

{% block body_admin %}
    <h2>City</h2>
    <a href="{{ path('admin_city_index') }}">back to list</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ city.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ city.name }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ city.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ city.longitude }}</td>
            </tr>
            <tr>
                <th>Activated</th>
                <td>{{ city.activated ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('admin_city_edit', {'id': city.id}) }}">edit</a>

    {{ include('admin/city/_delete_form.html.twig') }}
{% endblock %}